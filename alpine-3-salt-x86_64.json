  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/alpine/post-install.sh",
      "scripts/alpine/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/alpine/saltstack.sh",
      "scripts/alpine/cleanup.sh",
      "scripts/common/minimize.sh"
    ],
    "override": {
      "virtualbox-iso": {
        "execute_command": "/bin/sh '{{.Path}}'"
      },
      "qemu": {
        "execute_command": "/bin/sh '{{.Path}}'"
      },
      "vmware-iso": {
        "execute_command": "/bin/sh '{{.Path}}'"
      }
    }
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "alpine-3-salt-x86_64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "12bc27aa5758ad642ae3a3973255e785cf6bdec426d68148ed3bf9f682ce80c5",
