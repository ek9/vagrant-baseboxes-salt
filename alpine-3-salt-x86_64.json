{
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/v3.5/releases/x86_64/alpine-virt-3.5.0-x86_64.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-alpine-3-salt-x86_64-{{build_type}}",
    "vm_name": "packer-alpine-3-salt-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "30s",
    "boot_command": [
      "root<enter><wait>",
      "ifconfig eth0 up && udhcpc -i eth0<enter><wait>",
      "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/alpine/answers<enter><wait>",
      "setup-alpine -f answers<enter><wait5>",
      "vagrant<enter><wait>",
      "vagrant<enter><wait>",
      "<wait10><wait10><wait10>",
      "<wait10><wait10><wait10>",
      "y<enter>",
      "<wait10><wait10><wait10>",
      "<wait10><wait10><wait10>",
      "<wait10><wait10><wait10>",
      "<wait10><wait10><wait10>",
      "<wait10><wait10><wait10>",
      "<wait10><wait10><wait10>",
      "rc-service sshd stop<enter>",
      "mount /dev/sda3 /mnt<enter>",
      "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
      "umount /mnt<enter>",
      "reboot<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "shutdown_command": "/sbin/poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "Linux26_64",
