{
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/9.4.0/amd64/iso-cd/debian-9.4.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-debian-9-amd64-{{build_type}}",
    "vm_name": "packer-debian-9-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "iso_url": "{{user `mirror`}}/9.4.0/amd64/iso-cd/debian-9.4.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-debian-9-amd64-{{build_type}}",
    "vm_name": "packer-debian-9-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }, {
    "type": "vmware-iso",
    "guest_os_type": "debian9-64",
    "iso_url": "{{user `mirror`}}/9.4.0/amd64/iso-cd/debian-9.4.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-debian-9-amd64-{{build_type}}",
    "vm_name": "packer-debian-9-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "tools_upload_flavor": "linux",
    "shutdown_command": "sudo systemctl poweroff",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/debian/virtualbox.sh",
      "scripts/debian/vmware.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/common/saltstack.sh",
      "scripts/debian/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "debian-9-amd64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "124d270006703f2111224dec3bf7a9d01450168be41d4834f88fdd035552b044",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://cdimage.debian.org/debian-cd",
    "ssh_timeout": "60m"
  }
}
